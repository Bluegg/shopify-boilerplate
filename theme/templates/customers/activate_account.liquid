<h1>Activate your account</h1>

{% comment %}
  This form must use 'activate_customer_password'
{% endcomment %}
<div class="form-vertical">
  {% form 'activate_customer_password' %}

    {{ form.errors | default_errors }}

    <label for="CustomerPassword" class="">Password</label>
    <input type="password" value="" name="customer[password]" id="CustomerPassword" class="" placeholder="password">

    <label for="CustomerPasswordConfirmation" class="">Password again</label>
    <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="" placeholder="password">

    <input type="submit" class="btn" value="Sign up">
    <input type="submit" class="btn" name="decline" value="Cancel">
  {% endform %}
</div>
