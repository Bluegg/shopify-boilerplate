<!-- /templates/customers/register.liquid -->

<h1>Register</h1>

{% form 'create_customer' %}

  {{ form.errors | default_errors }}

  <label for="FirstName">First Name</label>
  <input type="text" name="customer[first_name]" id="FirstName" class="" placeholder="John" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>

  <label for="LastName">Last Name</label>
  <input type="text" name="customer[last_name]" id="LastName" class="" placeholder="Appleseed" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">

  <label for="Email">Email</label>
  <input type="email" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} error{% endif %}" placeholder="john.appleseed@bluegg.co.uk" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

  {% comment %}
  <label for="CreatePassword">Password</label>
  <input type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} error{% endif %}" placeholder="Password">
  {% endcomment %}

  <p>
    <input type="submit" value="Sign up" class="btn">
  </p>
  <a href="{{ shop.url }}">Get me out of here!</a>

{% endform %}
