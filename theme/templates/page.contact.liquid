<section class="section">

  <div class="wrapper">

		<div class="grid grid--center grid--spaced">

      <div class="grid__col l-10-12 xl-10-12">

        {% include 'breadcrumb' %}

      </div>

      <div class="grid__col l-10-12 xl-6-12">


        <article class="article" itemscope itemtype="http://schema.org/Article">

          <header>
              <h1 class="title title--headline">{{ page.title }}</h1>
          </header>

          <div class="article__content rte" itemprop="articleBody">
            {{ page.content }}
          </div>

							<div class="js-parsley-validate">
          {% form 'contact' %}

          {% if form.posted_successfully? %}
            <div class="successForm msg-box msg-box--positive is-active">
              {{ settings.contact_form_success }}
            </div>
          {% endif %}

          {% if form.errors %}
          <div class="errorForm msg-box msg-box--negative is-active">
            <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
            <p class="msg-box__msg">{{ settings.contact_form_error }}</p>
            <ul class="typo-ul msg-box__list">
              {% for field in form.errors %}
              <li>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</li>
              {% endfor %}

            </ul>
          </div>
          {% endif %}

          <div id="contactFormWrapper" class="form">
            <p class="form__row" class="form__row">
              <label class="form__label">{{ settings.form_fullname_label }}</label>
              <input class="form__field" type="text" required id="contactFormName" name="contact[name]" placeholder="Jane Smith">
            </p>
            <p class="form__row">
              <label class="form__label">{{ settings.form_email_label }}</label>
              <input class="form__field" type="email" data-parsley-required-message="{{settings.form_error_email_required}}" data-parsley-email-message="{{settings.form_error_email}}" required id="contactFormEmail" name="contact[email]" placeholder="email@yoursite.com">
            </p>
            <p class="form__row">
              <label class="form__label">{{ settings.form_phone_label }} (optional)</label>
              <input class="form__field" type="tel" data-parsley-type-message="{{settings.form_error_tel}}"  data-parsley-required-message="{{settings.form_error_tel_required}}" pattern="/^\s*(?:\+?(\d{1,3}))?([-. (]*(\d{3})[-. )]*)?((\d{3})[-. ]*(\d{2,4})(?:[-.x ]*(\d+))?)\s*$/gm" id="contactFormTelephone" name="contact[phone]" data-parsley-pattern-message="Please enter a valid telephone number">
            </p>
            <p class="form__row">
              <label class="form__label">{{ settings.contact_form_message }}</label>
              <textarea class="form__field" required rows="10" id="contactFormMessage" name="contact[body]" data-parsley-required-message="{{settings.form_error_message_required}}"></textarea>
            </p>
            <p class="form__row">
              <input type="submit" id="contactFormSubmit" value="{{ settings.contact_form_send }}" class="btn btn--primary" />
            </p>
          </div>

          {% endform %}
						</div>

        </article>

    </div>
    <!-- / .grid__col -->

    <div class="grid__col l-10-12 xl-4-12">

      <aside class="panel">


      </aside>

    </div>
    <!-- / .grid__col -->


  </div>
  <!-- / .grid -->

</section>
