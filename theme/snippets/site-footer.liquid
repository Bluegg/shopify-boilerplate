<footer class="site-footer section">

    <div class="wrapper">

      <div class="grid">

        <div class="grid__col m-1-2 l-2-3">

          <nav class="footer-nav">
            <ul class="footer-nav__list">

              {% for link in linklists.footer.links %}
                <li class="footer-nav__item">
                  <a href="{{ link.url }}" class="footer-nav__link {% if link.active %} is-active{% endif %}">{{ link.title }}</a>
                </li>
              {% endfor %}

            </ul>
          </nav>

        </div>
        <!-- /grid__col -->

        <div class="grid__col m-1-2 l-1-3">

          <div class="cc-panel">
            <h3 class="cc-panel__title">{{ settings.text_footer_payments }}</h3>
            <ul class="cc-panel__list">
              <!-- {% include 'svg-cc-icons' %} -->
										{% for type in shop.enabled_payment_types %}
											<li class="cc-panel__item">
												<img src="{{ type | payment_type_img_url }}" alt="{{ type.title }}" class="cc-panel__icon" />
											</li>
										{% endfor %}
            </ul>
          </div>

        </div>
        <!-- /grid__col -->

      </div>
      <!-- /grid -->


      <div class="site-footer__smallprint">
        <p class="typo-smallprint">{{ settings.text_footer_smallprint }}</p>
      </div>

    </div>

</footer>
